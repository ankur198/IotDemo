<Page x:ConnectionId='1'
    x:Class="HomeManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" BorderBrush="Black" BorderThickness=".5" Visibility="Collapsed">
            <TextBlock Text="Tube light" HorizontalAlignment="Center" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:ConnectionId='13' Content="On" Name="btnOn"                     Margin="5"/>
                <Button x:ConnectionId='14' Content="Off" Name="btnOff"                      Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <TextBlock Text="Transition value" HorizontalAlignment="Center" Margin="10"/>
                <Slider x:ConnectionId='12' Name="sliderTransition" Maximum="100" Width="250"                                             ></Slider>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <TextBlock Text="Brightness" HorizontalAlignment="Center" Margin="10"/>
                <Slider x:ConnectionId='11' Name="sliderBrightness" Maximum="100" Width="250"                                             ></Slider>
            </StackPanel>
        </StackPanel>

        <ListView x:ConnectionId='2' x:Name="ListAllHallLights"                                          SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate                         >
                    <StackPanel x:ConnectionId='6'>
                        <RelativePanel>
                            <TextBlock x:ConnectionId='9'                         />
                            <TextBlock x:ConnectionId='10'                     HorizontalAlignment="Right" RelativePanel.AlignRightWithPanel="True"/>
                        </RelativePanel>
                        
                        <ToggleSwitch x:ConnectionId='7'                              
                                                                            />

                        <Slider x:ConnectionId='8' Maximum="100"                                        />

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel RelativePanel.AlignRightWithPanel="True" Margin="20">
            <TextBlock Text="Add Light" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>
            <TextBox x:ConnectionId='3' Name="txtNickname" PlaceholderText="Nickname" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Pin" Margin="10"/>
                <TextBox x:ConnectionId='5' Name="txtPin" Width="70" InputScope="Digits" MaxLength="2"/>
            </StackPanel>
            <Button x:ConnectionId='4' Name="btnAddLight" Content="Add" HorizontalAlignment="Center" Margin="10"                          />

        </StackPanel>
    </RelativePanel>
</Page>

