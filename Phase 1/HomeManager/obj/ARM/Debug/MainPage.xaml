<Page
    x:Class="HomeManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" BorderBrush="Black" BorderThickness=".5">
            <TextBlock Text="Tube light" HorizontalAlignment="Center" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:ConnectionId='3' Content="On" Name="btnOn"                     Margin="5"/>
                <Button x:ConnectionId='4' Content="Off" Name="btnOff"                      Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <TextBlock Text="Transition value" HorizontalAlignment="Center" Margin="10"/>
                <Slider x:ConnectionId='2' Name="sliderTransition" Maximum="100" Width="250"                                             ></Slider>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <TextBlock Text="Brightness" HorizontalAlignment="Center" Margin="10"/>
                <Slider x:ConnectionId='1' Name="sliderBrightness" Maximum="100" Width="250"                                             ></Slider>
            </StackPanel>
        </StackPanel>
    </RelativePanel>
</Page>

